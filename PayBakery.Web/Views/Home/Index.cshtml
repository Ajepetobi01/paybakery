@{
    ViewData["Title"] = "Home Page";
}

@model PayBakery.Web.Models.HomeStatisticsViewModel
@{ 

    var balance = Model.Balance.balance;
    var currency = Model.Balance.currency;
    var recipents = Model.RecipentCount;
    var Transactions = Model.TransactionCount;
    var currentdate = DateTime.Now;
}
<div class="preloader">
    <div class="loader_img"><img src="img/loader.gif" alt="loading..." height="64" width="64"></div>
</div>

<div class="row main-cards">
    <div class="col-md-4 col-sm-6">
        <div class="panel">
            <h4><b>Balance</b></h4>
            <p>
                @currency @balance<br/>
                <small>as at @currentdate GMT</small>
            </p>
            <span id="user-chart"></span>
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel">
            <h4><b>Transfers</b></h4>
            <p>
                @Transactions

            </p>
            <span id="mr-chart"></span>
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="panel">
            <h4><b>Total Recipients</b></h4>
            <p>
                @recipents

            </p>
            <span class="pull-right progress-label">
                <b>6</b><small>%</small> <i class="ti-stats-up"></i>
            </span>
            <div class="progress progress-xs progress-striped active hits-progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
                     aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                </div>
            </div>
        </div>
    </div>

</div>
